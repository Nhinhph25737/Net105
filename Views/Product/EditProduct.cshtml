@model _3_Asp.Net_MVC.Models.Product

@{
    ViewData["Title"] = "EditProduct";
        var category = ViewData["TypeName"] as List<Category>;
}

<h2 style="margin-top : 100px">Edit Product</h2>
<div class="row">
    <div class="row">
        @if(TempData["Message"] != null)
        {
            <strong style="color:red">@TempData["Message"]</strong>
        }
    </div>
    <form asp-action="EditProduct" class="p-3 mb-2 bg-light text-dark" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-5">
                <div class="form-group">
                    <div class="row">
                        <div class="col-12">
                            <input class="form-control" type="file" name="imageUploader" onchange="ShowImagePreview(this,document.getElementById('previewImage'))" style="margin-top: 10px;" />
                        </div>
                        <div class="form-group" style="margin-top : 20px">
                            <img class="imgedit" id="previewImage" src="~/productimages/@Model.Image" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <strong>ProductName</strong>
                        </div>
                        <div class="col-10">
                            <input asp-for="ProductName" class="form-control" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <strong>Price</strong>
                                </div>
                                <div class="col-8">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5">
                                    <strong>AvailableQuantity</strong>
                                </div>
                                <div class="col-7">
                                    <input asp-for="AvailableQuantity" class="form-control" />
                                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <strong>Supplier</strong>
                        </div>
                        <div class="col-10">
                            <input asp-for="Supplier" class="form-control" />
                            <span asp-validation-for="Supplier" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <strong>Size</strong>
                                </div>
                                <div class="col-8">
                                    <select asp-for="Size" class="form-select">
                                        <option value="S">S</option>
                                        <option value="M">M</option>
                                        <option value="L">L</option>
                                        <option value="XL">XL</option>
                                    </select>
                                    <span asp-validation-for="Size" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="row">
                                <div class="col-4">
                                    <strong>Category</strong>
                                </div>
                                <div class="col-8">
                                    <select asp-for="TypeName" asp-items="@(new SelectList(category,"ID","Name"))" class="form-select"></select>

                                    <span asp-validation-for="TypeName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <strong>Status</strong>
                        </div>
                        <div class="col-10">
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <strong>Description</strong>
                        </div>
                        <div class="col-10">
                            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-12">
                            <button class="btn btn-primary" style="width:100%; height=45px;" type="submit">SAVE &emsp13;&emsp13;<span class="fa-solid fa-pen-to-square"></span></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
<p>
    <button class="btn btn-primary" type="button" style="height: 45px;color:#fff">
        <span class="fa-solid fa-chevron-left"></span> &emsp13;&emsp13;<a href="/Product/Redirect">Back to List</a>
</p>

@section Scripts {
    @{

    await Html.RenderPartialAsync("_ValidationScriptsPartial");

}
}
