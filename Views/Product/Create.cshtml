@model _3_Asp.Net_MVC.Models.Product


@{
    ViewData["Title"] = "CreateProduct";
    var category = ViewData["TypeName"] as List<Category>;
}
<h3 style="margin-top : 100px">CREATE PRODUCT</h3>
<div class="container-fluid">
    <div class="row">
        @if(TempData["Message"] != null)
        {
            <strong style="color:red">@TempData["Message"]</strong>
        }
    </div>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-12">
                        <input class="form-control" type="file" name="imageUploader" onchange="ShowImagePreview(this,document.getElementById('previewImage'))" style="margin-top: 10px;" />
                    </div>
                    <div class="form-group" style="margin-top : 20px">
                        <img class="imgedit" id="previewImage" src="~/productimages/null.jpg" />
                    </div>
                </div>
            </div>
            <div class="col-md-6" >
                <div class="row rowdetail" style="margin-top: 60px;">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-3">
                                <strong>ProductName</strong>
                            </div>
                            <div class="col-9">
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-3">
                                <strong>Price</strong>
                            </div>
                            <div class="col-9">
                                <input asp-for="Price" class="form-control" value="" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Size</strong>
                                    </div>
                                    <div class="col-6">
                                        <select asp-for="Size" class="form-select">
                                            <option value="S">S</option>
                                            <option value="M">M</option>
                                            <option value="L">L</option>
                                            <option value="XL">XL</option>
                                        </select>
                                        <span asp-validation-for="Size" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-3">
                                        <strong>Category</strong>
                                    </div>
                                    <div class="col-9">
                                        <select asp-for="TypeName" asp-items="@(new SelectList(category,"ID","Name"))" class="form-select"></select>
                                        <span asp-validation-for="TypeName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top:10px;">
                            <div class="col-3">
                                <strong>AvailableQuantity</strong>
                            </div>
                            <div class="col-9">
                                <input asp-for="AvailableQuantity" class="form-control" value="" />
                                <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-3">
                                <strong>Supplier</strong>
                            </div>
                            <div class="col-9">
                                <input asp-for="Supplier" class="form-control" />
                                <span asp-validation-for="Supplier" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-3">
                                <strong>Status</strong>
                            </div>
                            <div class="col-9">
                                <input asp-for="Status" class="form-control" value="" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 10px;">
                            <div class="col-3">
                                <strong>Description</strong>
                            </div>
                            <div class="col-9">
                                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 20px;">
                            <div class="col-6">
                                <button class="btn btn-primary" style="width:100%;height:45px" type="submit">CREATE&emsp13;&emsp13;<span class="fa-solid fa-plus ps-2"></span></button>
                            </div>
                            <div class="col-6">
                                <button type="reset" value="Reset" class="btn btn-danger" style="width:100%;height:45px">RESET&emsp13;&emsp13;<span class="fa-solid fa-arrows-rotate"></span></button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

    <p style="margin-top:20px">
        <button class="btn btn-primary" type="button" style="height: 45px;color:#fff">
            <span class="fa-solid fa-chevron-left"></span>&emsp13;&emsp13; <a href="/Product/Redirect">Back to List</a>
        </button>
    </p>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
