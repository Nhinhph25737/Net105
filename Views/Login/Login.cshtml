@model _3_Asp.Net_MVC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1 style="margin-top: 100px">Login</h1>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="row">
            @{
                if(@TempData["Message"] != null)
                {
                    <strong style="color:red">@TempData["Message"]</strong>
                }
            }
        </div>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="width:100%" type="submit" value="LOGIN" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row">


    <div class="col-6">
        <a class="btn btn-primary" href="/Home/Index">Back to Home</a>
    </div>
    <div class="col-6">
        <a class="btn btn-danger" href="/Login/LogOut">LOGOUT</a>
    </div>

